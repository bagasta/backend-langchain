// database/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  agents    Agent[] // Relasi one-to-many: 1 user banyak agent
  createdAt DateTime @default(now())
}

model Agent {
  id               String   @id @default(uuid())
  ownerId          String
  owner            User     @relation(fields: [ownerId], references: [id]) // foreign key ke User
  name             String
  modelName        String // misal: "gpt-4", "gpt-3.5-turbo"
  systemMessage    String // prompt dasar agent
  tools            String[] // misal: ["google", "calc"]
  memoryEnabled    Boolean  @default(false)
  memoryBackend    String   @default("in_memory")
  agentType        String   @default("chat-conversational-react-description")
  maxIterations    Int?
  maxExecutionTime Float?
  createdAt        DateTime @default(now())
}
